<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class=>"form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label "New Password", :class => "col-sm-2 control-label required" %>
    <div class="col-sm-4">
     <%= f.password_field :password, :class =>"input-xlarge form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "New Password (again)", :class => "col-sm-2 control-label required" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, :class =>"input-xlarge form-control" %>
    </div>
  </div>

  <div class="form-group">
   <%= f.submit "Change my password", :class => "btn btn-primary" %></div>
  </div>

  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
