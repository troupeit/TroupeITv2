<div class="login-cover">
</div>
<div class="login-cover-bg">
</div>

<!-- begin login -->
<div class="login login-v2" data-pageload-addclass="animated flipInX">
  <!-- begin brand -->
  <div class="login-header">
    <div class="brand">
      troupeIT
        <small>simple stage management.</small>
    </div>
    <div class="icon">
      <i class="fa fa-sign-in"></i>
    </div>
  </div>
  <!-- end brand -->
  <div class="login-content">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
    <div class="form-group m-b-20">
      <p><h2 style="color: #ffffff">Forgot your Password?</h1></p>
      <%= render "devise/shared/error_messages", resource: resource %>

      <p>Enter your email address below and we'll mail you a password recovery link if you have a troupeIT account.</p>
      <%= f.email_field :email, :class=>"form-control input-lg",:placeholder=>"Email" %>
    </div>
    <div class="login-buttons">
        <button type="submit" class="btn btn-success btn-block btn-lg">Send Reset Instructions</button>
    </div>

    <div class="form-group m-t-20 m-b-20">
      <P><a href="/users/sign_in">Go back to the sign-in page.</a></p>
    </div>
  </div>

    <% end -%>
  </div>
</div>
<!-- end login -->

<script>
$(function() { 
  $('input#user_email').focus();
});
</script>



</DIV>
</DIV>
