<div id="stylized" class="myform">

  <%= form_for(@passet, :html => {:class => "form-horizontal"}) do |f| %>
      <fieldset>
        <% if @passet.errors.any? -%>
            <div id="error_explanation">
              <h2><%= pluralize(@passet.errors.count, "error") %> prohibited this act from being saved:</h2>

              <ul>
                <% @passet.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end -%>

        <div class="alert alert-danger">
          Expert Users Only! Modifying fields on this page can break
          assets and their management.
        </div>

        <% @noedit = 1 %>
        <TABLE CLASS="table table-striped">
          <TR>
            <% if defined? @adminindex -%>
                <TH>Owner</TH>
            <% end -%>
            <TH WIDTH=200>Preview</TH>
            <TH>File</TH>
            <TH COLSPAN=2>Actions</TH>
          </TR>
          <%= render(@passet) %>
        </TABLE>

        <div class="form-group">
          <%= f.label :uuid, "Storage UUID", :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :uuid, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :filename, "Filename", :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :filename, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :kind, "Kind", :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :kind, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :song_artist, "Song Artist", :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :song_artist, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :song_title, "Song Title", :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :song_title, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :song_length, "Song Length", :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :song_length, :class => "form-control" %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :song_bitrate, "Song Bitrate", :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :song_bitrate, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10">
            <% if @passet.id != nil %>
                <%= f.submit "Update Asset", :class => "btn-primary" %>
            <% else -%>
                <%= f.submit "Create Asset", :class => "btn-primary" %>
            <% end -%>
          </div>
        </div>
      </fieldset>
  <% end -%>
