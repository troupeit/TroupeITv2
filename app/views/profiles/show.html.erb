<style type="text/css">
img.company-logo {
    width: 65px;
    height: 65px;
    margin-top: 10px;
    background: black;
    padding: 10px;
    
}

h1 {
    font-size: 58px;
    letter-spacing: -.03em;
    font-weight: 300;
    margin-top: 0px;
    padding: 0px;
}

h3 {
    font-size: 20px;
    padding-top: 0px;
    margin-bottom: 2px;
}

h4 {
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: .03em;
    padding: 0px;
    font-weight: 600;
}


.stamp {
    text-transform: uppercase;
    letter-spacing: .03em;
    padding: 0px;
    font-weight: 600;
    color: white;
    font: bold 16px/32px 'Open Sans', "Helvetica Neue",Helvetica,Arial,sans-serif;
    letter-spacing: -.5px;
    background: rgb(0, 0, 0); /* fallback color */
    background: rgba(0, 0, 0, 0.7);
    padding: 10px;
}

.co-cover-art {
    background: url(<%=@coverurl%>);
    width: 100%;
    height: 200px;
    background-size: 100%;
    background-position: 0px -290px;
    margin-bottom: 10px;
}

div#co-info {
    margin: 15px 0px 0px;
    border-top: 1px solid #eaeaea;
    padding-top: 15px;
}

#co-info span.col-lg-4.col-xs-12 {
    padding: 0px;
    margin: 0px;
}

#co-info strong {
    display: block;
}

#co-description {
    margin-top: 15px;
    border-top: 1px solid #eaeaea;
    padding-top: 30px;
    margin-bottom: 15px;
}

#co-description p {
    margin: 0 0 20px;
    font-size: 16px;
    line-height: 1.4em;
}

.co-images img {
    background: #eaeaea;
    height: 200px;
}

.date {
    border: 1px solid #eaeaea;
    padding: 10px;
    display: inline-block;
    margin: 0px 15px 15px 0px;
    float: left;
}

.day {
    font-size: 24px;
    display: block;
    line-height: 24px;
    font-weight: 500;
}

.month {
    font-size: 18px;
    text-transform: lowercase;
    line-height: 10px;
}

.showlist {
    height: 70px;
    display: block;
    padding: 0px;
    clear: both;
    width: 100%;
    margin: 15px 0px;
}

.castlist ul {
    padding-left: 0px;
    margin-top: 15px;
}

.castlist ul li {
    list-style-type: none;
    margin-bottom: 15px;
    margin-top: 15px;
}

span.show-description {
    display: inline-block;
    margin-top: 10px;
}

.outlined {
    border: 3px solid #ffffff;
}

.username h1 span { 
    color: white;
    font: bold 24px/45px 'Open Sans', "Helvetica Neue",Helvetica,Arial,sans-serif;
    letter-spacing: -1px;
    background: rgb(0, 0, 0); /* fallback color */
    background: rgba(0, 0, 0, 0.7);
    padding: 10px;
}

.coveredit {
    color: white;
    border: 1px solid white;
    padding: 10px;
    margin-top: -40px;
    cursor: pointer;
    background-color: #000000;
}

</style>

<%=react_component 'UserProfile', { :id => @user.id.to_s, :curid => current_user.id.to_s } %>
<%=react_component 'AssetPicker', { :name => current_user.name.titleize, :email => current_user.email, :facebookId => current_user.uid, :initialMimeType => "image/" } %>
                                                                                                                                                                                                                                 
