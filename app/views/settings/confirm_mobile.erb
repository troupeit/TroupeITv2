<div class="panel">
  <div class="panel-body">
    <div class="col-md-offset-2 col-md-8 col-md-offset-2">
      <div class="row">
        <div class="col-md-3">
          <%=react_component 'Avatar', {:name => current_user.name.titleize, :email => current_user.email, :facebookId => current_user.uid, :uuid => current_user.avatar_uuid, :round => true } %>
        </div>
        <div class="col-md-8">
          <h1><%= current_user.name.titleize %></h1>
        </div>
      </div>

      <h3>Confirm your mobile number</h3>

      <p>
        We have sent a confirmation code to <b><%=current_user.phone_number %></b>. It may take a minute or so to arrive. If you do not receive your code, you can <a href="/settings/confirm_mobile">resend the confirmation code</i></a>. 
      </p>

      <p>
        Please enter the six-digit confirmation code to enable SMS notifications
      </p>

      <%= form_for(:user,
          :url => { :controller => "settings",
                    :action => "verify_mobile" },
          :html => { :method => :post, :class => "form-horizontal" }) do |f| %>

      <div class="form-group">
        <%= f.label :code, "Verification code", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :code, :class => "form-control"  %>
        </div>
      </div>
      <%= f.submit "Confirm",  :class => "btn btn-success form-control"  %>

      <% end -%>
    </div>
  </div>
</div>

        


